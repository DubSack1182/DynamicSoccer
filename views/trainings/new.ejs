<%- include('../partials/header.ejs') %>
    <h1>Create A Training Session</h1>
<form action="/trainings" method="POST">
  <label for="location">Location</label>
  <input type="text" required name="location" id="location"/>
  <label for="date">Date</label>
  <input type="date" required name="date" id="date" />
  <label for="type">Training Type</label>
  <select required name="type" id="type">
    <% types.forEach((t) => { %>
      <option value="<%= t %>"><%= t %></option>
    <% }) %>
  </select>
  <label for="price">Cost Per Hour</label>
  <input type="number" required name="price" id="price" />
  <label for="phone">Contact Number:</label>
  <input type="text" required name="phone" id="phone" />
  <br>
  <button type="submit">Create Training</button>
</form>
<%- include('../partials/footer.ejs') %>
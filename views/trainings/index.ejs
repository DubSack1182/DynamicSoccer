<!-- views/trainings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Training Sessions</title>
  </head>
  <body>
    <h1>All Dynamic Training Sessions</h1>
    <% if (trainings.length) { %>
      <ul>
          <% trainings.forEach((training) => { %>
              <li>
                  <%= training.name %> &nbsp;&nbsp; 
              </li>
              <li>
                <%= training.price %> &nbsp;&nbsp; 
              </li>
              <form action="/users/<%= user._id %>/bookings/<%= training._id %>" method="POST">
                <button type="submit">Book Session!</button>
              </form>
          <% })%>
      </ul>
  <% } %>
    <a href="/trainings/new">View Dynamic Training Sessions</a>
  </body>
</html>
<%- include('../partials/header.ejs') %>
    <h1>Edit Training Session</h1>
<form action="/trainings" method="POST">
  <label for="location">Location</label>
  <input type="text" required name="location" id="location" value="<%= training.location %>"/>
  <label for="date">Date</label>
  <input type="date" required name="date" id="date" value="<%= training.date.toISOString().slice(0,10) %>"/>
  <label for="type">Training Type</label>
  <select required name="type" id="type">
    <% types.forEach((t) => { %>
      <option <%= t === training.type ? 'selected' : '' %> value="<%= t %>"><%= t %></option>
    <% }) %>
  </select>
  <label for="price">Cost Per Hour</label>
  <input type="number" required name="price" id="price" value="<%= training.price %>" />
  <label for="phone">Contact Number:</label>
  <input type="text" required name="phone" id="phone" value="<%= training.phone %>" />
  <br>
  <button type="submit">Update Training</button>
</form>
<%- include('../partials/footer.ejs') %>